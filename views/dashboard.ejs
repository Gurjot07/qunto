<div class="row mt-5">

    <div class="col-sm-3 "><img src="<%= user.imageurl %>" class="m-x-auto img-fluid img-circle" alt="avatar">
        <h6 class="mt-4 ">Website</h6>
        <p>
            <a href="<%= user.website %>">
                <% let website %>
                <% if(user.website.length >26){
                    website = user.website.slice(0,26) +" ...";
                }
                else {
                    website = user.website;
                }
                %>
